{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bolt.gives",
  "version": "1.0.2",
  "identifier": "com.embire2.bolt.gives",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build/client"
  },
  "app": {
    "windows": [
      {
        "title": "bolt.gives",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage", "msi", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJERjM3QTlBNTVDRTYxMzMKUldRaXd1ZlFLZ2xoR0JOYzhGMnB0dWJyN0RNVUVKWXdJeUY3b3N4dXRBcHY2aG1BVkNTa1RlYXkK",
      "endpoints": [
        "https://github.com/embire2/bolt.gives/releases/latest/download/latest.json"
      ]
    }
  }
}
